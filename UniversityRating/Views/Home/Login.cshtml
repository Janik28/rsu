@model IEnumerable<UniversityRating.Models.Role>

@{
    ViewBag.Title = "Login";
}

<h2>Введите учетные данные</h2>

@if (Session["auth"] == "no")
{
    <p style="color: red; font-weight: 500;">Неверные данные!</p>
}

<form method="POST" action="">
    @Html.AntiForgeryToken()

    <label style="margin-right: 10px;">Войти как: </label><select name="role" class = "form-control">
        @foreach (UniversityRating.Models.Role r in ViewBag.Roles)
        {
            <option value="@r.Id">@r.Name</option>
        }
    </select><br style="margin-bottom: 10px;"/>

    <label style="margin-right: 10px;">Логин: </label><input class = "form-control" type="text" name="login" placeholder="Введите логин" value="teacher"/>
    <br style="margin-bottom: 10px;"/>

    <label style="margin-right: 10px;">Пароль: </label><input class = "form-control" type="password" name="password" placeholder="Введите пароль" value="teacher"/>
    <br style="margin-bottom: 10px;"/>

    <input type="submit" value="Войти" class="btn btn-default"/><br style="margin-bottom: 2em;"/>
    <a href="/Shared/Error" >Забыли логин или пароль?</a>
</form>