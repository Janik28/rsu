@model List<UniversityRating.Models.TeachersLogin>

@{
    ViewBag.Title = "WhatsMyLogin";
}



<h2 style="text-align: center; padding: 10px 40px;
                                      width: 80%; margin: 0 auto; border-radius: 0 0 1em 1em;
                                      background-color: #ecf0f1;">
    Узнать логин
</h2>

<div style="text-align: center;">
    @{
        string alphabet = "АБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЫЭЮЯ";

        foreach (char c in alphabet)
        {
            if (ViewBag.firstTLetter != c)
            {
                <a href="/Home/WhatsMyLogin?firstTLetter=@c" class="btn btn-default">@c</a>
            }
            else
            {
                <a href="/Home/WhatsMyLogin?firstTLetter=@c" class="btn btn-primary">@c</a>
            }
        }
    }
</div>

<table class="table" style="margin-top: 2em;">
    <tr>
        <th>
            ФИО
        </th>
        <th>
            Логин
        </th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Model[i].TName
            </td>
            <td>
                @Model[i].TLogin
            </td>
        </tr>
    }
</table>